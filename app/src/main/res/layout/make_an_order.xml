<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/screen_frame">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:text="Select lcation"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:dropDownWidth="wrap_content"
                android:minHeight="40dp"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_spinner"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:foregroundGravity="clip_horizontal|center"
                android:text="Select hotel name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/hotel_name_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:minHeight="40dp"
                android:popupBackground="#00E676"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel_name_spinner"
                android:layout_alignLeft="@+id/textView1"
                android:layout_marginTop="40dp"
                android:foregroundGravity="clip_horizontal|center"
                android:text="Select duration"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/duration_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:minHeight="40dp"
                android:popupBackground="#00E676"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duration_spinner"
                android:layout_alignLeft="@+id/textView1"
                android:layout_marginTop="40dp"
                android:foregroundGravity="clip_horizontal|center"
                android:text="Select transportation"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/transportation_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:minHeight="40dp"
                android:popupBackground="#00E676"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transportation_spinner"
                android:layout_alignLeft="@+id/textView1"
                android:layout_marginTop="40dp"
                android:foregroundGravity="clip_horizontal|center"
                android:text="Select rate"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/rate_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:dropDownWidth="wrap_content"
                android:minHeight="40dp"
                android:popupBackground="#00E676"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate_spinner"
                android:layout_alignLeft="@+id/textView1"
                android:layout_marginTop="40dp"
                android:text="Select the number of tickets"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EB3C3F41" />

            <Spinner
                android:id="@+id/tickets_num_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:dropDownWidth="wrap_content"
                android:foregroundGravity="clip_horizontal|center"
                android:minHeight="40dp"
                android:popupBackground="#00E676"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tickets_num_spinner"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedbutton"
                android:onClick="submit"
                android:text="@string/submit"
                android:textColor="#ffff"
                android:textSize="16sp" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_screen"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_profile"
        app:menu="@menu/profile_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>