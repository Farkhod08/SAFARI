<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_frame">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="s u p e r j e t"
            android:textSize="46sp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/textView1"
            android:src="@drawable/superjet1" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/textView1"
            android:src="@drawable/superjet2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/imageView1"
            android:src="@drawable/superjet3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/imageView2"
            android:src="@drawable/superjet4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/imageView3"
            android:src="@drawable/superjet5" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="420dp"
            android:layout_height="260dp"
            android:layout_below="@id/imageView4"
            android:src="@drawable/superjet6" />

    </RelativeLayout>
</ScrollView>

