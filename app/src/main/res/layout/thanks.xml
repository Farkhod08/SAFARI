<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:background="@drawable/dialog_positive_round"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:text="Go back to main menu"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/awsome"
            android:layout_marginTop="10dp"
            android:text="Thanks for rating"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/awsome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/transparent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_iconfinder_like" />

    </RelativeLayout>


</RelativeLayout>