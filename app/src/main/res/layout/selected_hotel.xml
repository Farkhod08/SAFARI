<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.selected_hotel"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotel_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/car1" />

                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="hotel_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hotel_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="descriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescription"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hotel_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/hotel_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:paddingRight="5dp"
                    android:text="00 km from center"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hotel_gym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_fitness_center_black_24dp"
                    android:paddingRight="5dp"
                    android:text="Fabulous fitness centre"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/hotel_parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_local_parking_black_24dp"
                    android:paddingRight="5dp"
                    android:text="Parking"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hotel_swimming_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_pool_black_24dp"
                    android:paddingRight="5dp"
                    android:text="Swimming pool Indoor and Outdoor"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/hotel_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_local_bar_black_24dp"
                    android:paddingRight="5dp"
                    android:text="bar"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hotel_spa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_spa_black_24dp"
                    android:paddingRight="5dp"
                    android:text="Spa and wellness centre"
                    android:textColor="#00C853"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/hotel_beach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_beach_access_black_24dp"
                    android:text="beach"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hotel_aiport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_airport_shuttle_black_24dp"
                    android:paddingRight="5dp"
                    android:text="Airport shuttle"
                    android:textColor="#00C853"
                    android:textSize="17sp" />


            </LinearLayout>

            <com.ramotion.circlemenu.CircleMenuView
                android:id="@+id/circle_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:button_colors="@array/colors"
                app:button_icons="@array/icons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>